@model IEnumerable<MyApp.Models.StatementModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<!DOCTYPE html>
<html lang="en">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css" />

    <title>Statements</title>
</head>

<body id="statement-page-body">

    <header class="header-section"></header>
    <section class="filter-section">

        <div class="form-group">
            <label for="StatementFilter" class="filter-label">Statement Name</label>

            <input class="form-control" name="StatementFilter" id="StatementFilter" type="text" placeholder="Enter here "
                   value="">
        </div>
    </section>
    <section class="grid-section">

        <table class="table" id="statement-table">
            <thead>
                <tr>
                    <th>Statement Image</th>
                    <th>Statement Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var imgSrc = String.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(item?.statementImage));

                    <tr>
                        <td>
                            <img src="@imgSrc" />
                        </td>
                        <td>
                            @item.statementName
                        </td>

                        <td>
                            <a asp-controller="StatementModels" asp-action="GoToStatement" asp-route-id="@item.statementId">View</a>
                        </td>

                    </tr>
                 }
            </tbody>
        </table>
    </section>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/scripts/site.js" asp-append-version="true"></script>
</body>
</html>